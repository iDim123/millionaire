// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Question {
  id       Int    @id @default(autoincrement())
  question String
  options  String
  answers  String
  score    Int
}

model ActiveQuestionId {
  id         Int    @id @default(autoincrement())
  questionId Int
}

model FinalScore {
  id    Int @id @default(autoincrement())
  score Int
}
